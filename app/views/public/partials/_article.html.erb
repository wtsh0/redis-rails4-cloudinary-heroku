<div class="row">
  <div class="col-xs-2 col-md-2">
    <div class="text-center">
      <h1><%= @article.title %></h1><br />
      <hr>
      <div>更新日：<%= @article.updated_at.to_s(:time_short) %></div>
      <%= dispImage(@article.picture) %>
    </div>
  </div>
  <div class="col-xs-10  col-md-10">
    <p>
      <div class="text-left">
        <%= @article.details, length: 20 %><br /><br />
      </div>
    </p>
    <p>
      <div class="text-center">
        <%= link_to 'トップページへ', root_path, class: 'btn btn-default' %>
      </div>
    </p>
  </div>

</div>
