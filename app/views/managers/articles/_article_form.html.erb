  <div class="field col-md-12 col-sm-12">
    <%= f.label :title, '見出し', class:'control-label' %>
    <%= f.text_field :title, placeholder:'見出し', class:'form-control'%>
  </div>

  <div class="field col-md-12 col-sm-12">
    <%= f.label :details, '詳細', class:'control-label' %>
    <%= f.text_area :details, placeholder:'詳細をここに書いてください', class:'form-control'%>
  </div>
  <div  class="field text-center">
    <%= f.check_box :published, as: :boolean %>
    <%= f.label :published, '公開する', class:'control-label' %>
  </div>

  <div class="actions text-center">
    <%= f.submit @submit, class: 'btn btn-default btn-md' %>
  </div>
