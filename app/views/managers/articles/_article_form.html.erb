<%= render partial: 'layouts/error_messages', locals: {instance: @article} %>

<div class="field col-md-12 col-sm-12">
  <%= f.label :title, class:'control-label' %>
  <%= f.text_field :title, placeholder:'見出し', class:'form-control'%>
</div>

<div class="field col-md-12 col-sm-12">
  <%= f.label :details, class:'control-label' %>
  <%= f.text_area :details, placeholder:'詳細をここに書いてください', class:'form-control'%>
</div>

<div class="field col-md-12 col-sm-12">
<%= f.label :picture %><br />
<% if @article.image.present? %>
  <%= image_tag(@article.picture.url, width: 100, height: 100) %>
<% else %>
  <%= image_tag('/assets/no-image.png', width: 100, height: 100) %>
<% end %>
<%= f.file_field :picture %>
</div>

<div  class="field text-center">
  <%= f.check_box :published, as: :boolean %>
  <%= f.label :published, '公開する', class:'control-label' %>
</div>

<div class="actions text-center">
  <%= f.submit @submit, class: 'btn btn-default btn-md' %>
</div>
